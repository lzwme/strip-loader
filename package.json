{
  "name": "@lzwme/strip-loader",
  "description": "A simple webpack loader to strip custom debug statements from your code.",
  "version": "1.0.0",
  "main": "src/index.js",
  "license": "MIT",
  "repository": "lzwme/strip-loader",
  "homepage": "https://github.com/lzwme/strip-loader.git",
  "author": {
    "name": "renxia",
    "email": "lzwy0820@qq.com",
    "url": "https://lzw.me"
  },
  "keywords": [
    "webpack",
    "webpack-loader",
    "strip",
    "comments",
    "debug"
  ],
  "files": ["src"],
  "scripts": {
    "prepare": "husky install",
    "dev": "npm run watch:build",
    "start": "npm run watch",
    "build": "run-s clean && run-p build:*",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "fix": "run-s fix:*",
    "fix:lint": "eslint src --fix",
    "fix:prettier": "prettier \"src/**/*\" --write",
    "lint:prettier": "prettier \"src/**/*\" --list-different",
    "test": "run-s test:*",
    "test:lint": "flh --eslint --prettier",
    "test:unit": "npm run cov",
    "watch:test": "jest --watch",
    "cov": "jest --coverage --silent",
    "cov:html": "jest --coverage --silent --reporter=html",
    "version": "standard-version",
    "dist": "run-s test",
    "release": "run-s dist",
    "release-version": "run-s dist version",
    "clean": "flh rm -f ./cjs ./esm"
  },
  "engines": {
    "node": ">=14"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.com"
  },
  "devDependencies": {
    "@jest/core": "^29.0.1",
    "@jest/types": "^29.0.1",
    "@lzwme/fed-lint-helper": "1.12.4",
    "@types/eslint": "^8.4.6",
    "@types/jest": "^29.0.0",
    "@types/node": "^18.7.14",
    "@typescript-eslint/eslint-plugin": "^5.36.1",
    "@typescript-eslint/parser": "^5.36.1",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^27.0.1",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "jest": "^29.0.1",
    "memfs": "^3.4.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "standard-version": "^9.5.0",
    "ts-jest": "^28.0.8",
    "ts-loader": "^9.3.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.2",
    "webpack": "^5.74.0"
  },
  "peerDependencies": {
    "webpack": "^5.0.0"
  },
  "packageManager": "pnpm@7.6.0"
}
